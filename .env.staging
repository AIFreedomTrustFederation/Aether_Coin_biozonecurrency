# Aetherion Wallet - Staging Environment Configuration
# This file contains staging-specific configuration settings

# Node.js environment
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# Base URL for staging
BASE_URL=https://staging.atc.aifreedomtrust.com
DEPLOY_PATH=/dapp

# Performance optimizations
VITE_DISABLE_DEV_TOOLS=false
VITE_PERSISTENT_CACHE=true
COMPRESSION_LEVEL=4

# Logging configuration
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
ERROR_STACK_TRACES=true

# Security enhancements
ENFORCE_HTTPS=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=200
SESSION_COOKIE_SECURE=true
STRICT_TRANSPORT_SECURITY=true

# CDN integration
USE_CDN=false
CDN_URL=
CLOUDFLARE_ENABLED=false
ASSETS_CACHE_DURATION=300 # 5 minutes in seconds

# Monitoring configuration
ENABLE_HEALTH_CHECKS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Feature flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_TRANSACTION_BATCHING=true
FEATURE_SMART_CONTRACT_VALIDATION=true