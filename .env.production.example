# Production Environment Configuration for Aetherion Wallet
# Copy this file to .env.production and update the values

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aetherion

# Authentication
JWT_SECRET=your-strong-secret-here
JWT_EXPIRY=7d

# API Configuration
VITE_API_URL=https://aifreedomtrust.com/api

# GitHub Configuration
GITHUB_TOKEN=your-github-token-here

# Domain Configuration
DOMAIN_ROOT=aifreedomtrust.com
SUBDOMAIN_ATC=atc.aifreedomtrust.com

# Quantum Security Parameters
QUANTUM_SECURITY_LEVEL=256
HTTQS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/aetherion/app.log

# CORS Configuration
CORS_ORIGIN=https://aifreedomtrust.com,https://www.aifreedomtrust.com,https://atc.aifreedomtrust.com