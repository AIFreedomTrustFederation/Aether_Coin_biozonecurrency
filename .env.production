# Aetherion Wallet - Production Environment Configuration
# This file contains production-specific configuration settings

# Node.js environment
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Base URL for production
BASE_URL=https://atc.aifreedomtrust.com
DEPLOY_PATH=/dapp

# Performance optimizations
VITE_DISABLE_DEV_TOOLS=true
VITE_PERSISTENT_CACHE=true
COMPRESSION_LEVEL=6

# Logging configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ERROR_STACK_TRACES=false

# Security enhancements
ENFORCE_HTTPS=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
SESSION_COOKIE_SECURE=true
STRICT_TRANSPORT_SECURITY=true

# CDN integration
USE_CDN=true
CDN_URL=https://atc.aifreedomtrust.com
CLOUDFLARE_ENABLED=true
ASSETS_CACHE_DURATION=2592000 # 30 days in seconds

# Monitoring configuration
ENABLE_HEALTH_CHECKS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Feature flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_TRANSACTION_BATCHING=true
FEATURE_SMART_CONTRACT_VALIDATION=true