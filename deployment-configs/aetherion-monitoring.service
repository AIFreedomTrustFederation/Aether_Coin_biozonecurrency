[Unit]
Description=Aetherion Wallet Monitoring Dashboard
After=network.target

[Service]
Type=simple
User=deploy
WorkingDirectory=/home/deploy/aetherion
ExecStart=/usr/bin/node /home/deploy/aetherion/deployment-configs/monitoring-dashboard.js
Restart=on-failure
RestartSec=10
Environment=NODE_ENV=production
Environment=DASHBOARD_PORT=8090

[Install]
WantedBy=multi-user.target